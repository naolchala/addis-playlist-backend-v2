{
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@routes/*": ["./src/routes/*"],
			"@controllers/*": ["./src/controllers/*"],
			"@models/*": ["./src/models/*"],
			"@configs/*": ["./src/configs/*"],
			"@utils/*": ["./src/utils/*"],
			"@validations/*": ["./src/validations/*"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "test/**/*.ts"]
}
